<%= form_for(@product) do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- Page Content -->
<div class="row">
  <!-- Product Content Column -->
  <div class="col-lg-8">
    <!-- Title -->
    <p class="lead"><strong>Ean: </strong><%= @product.EAN %></p>
    <p class="lead"><strong>Nom produit: </strong><br><%= f.text_field :NOM_PRODUIT, :size=>"60", :size=>"60" %></p>

    <hr>

    <p class="lead"><strong>Categories: </strong><br><%= f.text_field :CATEGORIES, :size=>"60" %></p>

    <hr>

    <p class="lead"><strong>Marque: </strong><br><%= f.text_field :MARQUE, :size=>"60" %></p>
    <p class="lead"><strong>Ref fabricant: </strong><br><%= f.text_field :REF_FABRICANT, :size=>"60" %></p>
    <p class="lead"><strong>DESCRIPTION: </strong><br><%= f.text_area :DESCRIPTION, :size=>"60" %></p>

    <hr>

    <div class="well">
      <h4>Image Link</h4>
      <p class="lead"><strong>IMAGE 1: </strong><br><%= f.url_field :IMAGE1, :size=>"60", :size=>"60", :size=>"60", :size=>"60" %></p> 
      <p class="lead"><strong>IMAGE 2: </strong><br><%= f.url_field :IMAGE2, :size=>"60", :size=>"60", :size=>"60" %></p> 
      <p class="lead"><strong>IMAGE 3: </strong><br><%= f.url_field :IMAGE3, :size=>"60", :size=>"60" %></p> 
      <p class="lead"><strong>IMAGE 4: </strong><br><%= f.url_field :IMAGE4, :size=>"60" %></p>      
    </div>
    <hr>
    <div class="actions">
      <%= f.submit %>
    </div>
    <hr>
  </div>
  <!-- Product Sidebar Column -->
  <div class="col-md-4">
    <div class="well">
      <h4>Infos</h4>
      <div class="row">
        <div class="col-lg-6">
          <ul class="list-unstyled">
            <li><strong>PRIX ACHAT HT: </strong><br><%= f.number_field :PRIX_ACHAT_HT %></li>
            <li><strong>PORT FR HT: </strong><br><%= f.number_field :PORT_FR_HT %></li>
            <li><strong>PORT DE HT: </strong><br><%= f.number_field :PORT_DE_HT %></li>
            <li><strong>PORT ES HT: </strong><br><%= f.number_field :PORT_ES_HT %></li>
            <li><strong>PORT IT HT: </strong><br><%= f.number_field :PORT_IT_HT %></li>
            <li><strong>DELAI EXPEDITION: </strong><br><%= f.number_field :DELAI_EXPEDITION %></li>
            <li><strong>STOCK: </strong><br><%= f.number_field :STOCK %></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Side Widget Well -->
    <div class="well">
      <h4>Caract√©ristiques</h4>
      <div class="row">
        <div class="col-lg-6">
          <ul class="list-unstyled">
            <li><strong>POIDS: </strong><br><%= f.number_field :POIDS %></li>
            <li><strong>LARGEUR: </strong><br><%= f.number_field :LARGEUR %></li>
            <li><strong>PROFONDEUR: </strong><br><%= f.number_field :PROFONDEUR %></li>
            <li><strong>HAUTEUR: </strong><br><%= f.number_field :HAUTEUR %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>